{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "./_dist/client/",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": [
        "src/client/**/*"
    ],
    "types": [
        "react"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}